<!DOCTYPE html>
<html>
  <head>
    <title>MashBook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
        <script>
          window.currentUser = {
            'id': <%= current_user.id %>,
            'email': "<%= current_user.email %>",
            'fname': "<%= current_user.fname %>",
            'lname': "<%= current_user.lname %>",
            'birthday': "<%= current_user.birthday %>",
            'gender': "<%= current_user.gender %>"
          };
        </script>
    <% end %>

    <script type="text/javascript">
      window.bell = "<%=image_url('bell.svg')  %>"
      window.down = "<%=image_url('down.svg')  %>"
      window.messages = "<%=image_url('messages.svg')  %>"
      window.group = "<%=image_url('group.svg')  %>"
      window.video = "<%=image_url('video.svg')  %>"
      window.home = "<%=image_url('home.svg')  %>"
      window.search = "<%=image_url('search.svg')  %>"
      window.m = "<%=image_url('m.svg')  %>"
      window.linkedin = "<%=image_url('linkedin.svg')  %>"
      window.github = "<%=image_url('github.svg')  %>"
      window.person = "<%=image_url('person.svg')  %>"
      window.male = "<%=image_url('male.png')  %>"
      window.female = "<%=image_url('female.png')  %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
